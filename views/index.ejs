<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="container">
      <h1><%= title %></h1>
      <p class="subtitle">A tiny message board built with Express + EJS</p>

      <div class="header-actions">
        <span></span>
        <a href="/new" class="btn btn-primary">Write a new message</a>
      </div>

      <ul class="messages">
        <% messages.forEach((m) => { %>
          <li class="card message">
            <div class="message-title">
              <span class="message-user"><%= m.username %></span>
              <span class="message-time"><%= new Date(m.added).toLocaleString() %></span>
            </div>
            <div class="message-text"><%= m.message %></div>
            <div class="message-actions">
              <a class="btn btn-link" href="/messages/<%= m.id %>">Open â†’</a>
            </div>
          </li>
        <% }) %>
      </ul>
    </div>
  </body>
</html>
